void add_edge(Graph* G, int x, int y) {
    // 1. Kiểm tra tính hợp lệ của cung (x, y)
    // Cung hợp lệ nếu x và y nằm trong khoảng từ 1 đến n
    if (x < 1 || x > G->n || y < 1 || y > G->n) {
        return; // Bỏ qua nếu không hợp lệ
    }

    // 2. Thêm cung vào danh sách tại vị trí m hiện tại
    G->edges[G->m].x = x;
    G->edges[G->m].y = y;

    // 3. Tăng số lượng cung m lên 1
    G->m++;
}
